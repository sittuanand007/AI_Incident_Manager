# User will copy this to .env and fill in secrets

# Email settings for fetching incidents (IMAP)
IMAP_SERVER=imap.example.com
IMAP_USERNAME=your_incident_email@example.com
IMAP_PASSWORD=your_email_password_here

# Email settings for sending acknowledgements/notifications (SMTP)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_agent_email@example.com
SMTP_PASSWORD=your_agent_email_password_here
SENDER_EMAIL=your_agent_email@example.com # Email address agent sends from

# Jira settings
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your_jira_username@example.com # Often an email address
JIRA_API_TOKEN=your_jira_api_token_here

# The user must create a .env file with their actual credentials.